<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_narrow"
            android:src="@drawable/ic_information" />

        <TextView
            android:id="@+id/title_plant_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:text="식물원 정보"
            android:textColor="@color/colorBaseCyan"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="1dp">

                <ImageButton
                    android:id="@+id/guide_outside"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:background="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="1dp">

                <ImageButton
                    android:id="@+id/guide_inside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.botanic_park.SquareLinearLayout
                android:id="@+id/information_information_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#334C7F3A">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/information_information_use_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="이용안내"
                    android:textColor="@color/colorNormalText"
                    android:textSize="18sp" />


            </com.example.botanic_park.SquareLinearLayout>

            <com.example.botanic_park.SquareLinearLayout
                android:id="@+id/information_way_to_come"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#3390BC43">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/information_way_to_come_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="오시는 길"
                    android:textColor="@color/colorNormalText"
                    android:textSize="18sp" />

            </com.example.botanic_park.SquareLinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.botanic_park.SquareLinearLayout
                android:id="@+id/information_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="#3355A37C">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/information_news_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="새소식"
                    android:textColor="@color/colorNormalText"
                    android:textSize="18sp" />
            </com.example.botanic_park.SquareLinearLayout>

            <com.example.botanic_park.SquareLinearLayout
                android:id="@+id/information_community"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#33C1D42D">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/information_community_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="건의사항"
                    android:textColor="@color/colorNormalText"
                    android:textSize="18sp" />
            </com.example.botanic_park.SquareLinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>