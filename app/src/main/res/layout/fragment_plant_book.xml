<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 식물 검색 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBaseLightGreen"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="40dp"
            android:paddingEnd="30dp"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_wide"
                android:gravity="center_horizontal"
                android:text="식물 검색"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_title" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_horizontal">

                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                    android:hint="키워드 입력"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textSize="@dimen/text_size_normal" />

                <ImageButton
                    android:id="@+id/camera_search_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:layout_weight="0"
                    android:background="@color/colorTransparent"
                    android:src="@drawable/ic_camera_search" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 식물 도감 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:padding="@dimen/padding_plant_book_item">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_wide"
                    android:gravity="center_horizontal"
                    android:text="식물 도감"
                    android:textColor="@color/colorBase"
                    android:textSize="@dimen/text_size_title" />

                <com.example.botanic_park.PlantSearch.PlantBookExpandableGridView
                    android:id="@+id/gridview_plant_book"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:horizontalSpacing="@dimen/margin_normal"
                    android:numColumns="auto_fit"
                    android:overScrollMode="never"
                    android:padding="10dp"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="@dimen/margin_normal" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>

