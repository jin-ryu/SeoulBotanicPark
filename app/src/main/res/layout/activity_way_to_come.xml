<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

        <ImageView
            android:id="@+id/seoul_botanical_garden_logo"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:srcCompat="@drawable/seoul_botanical_garden_logo" />

            <!--이미지-->
            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/seoul_botanical_garden_way_to_come_subway"
                app:srcCompat="@drawable/seoul_botanic_garden_way_to_come_subway"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/seoul_botanical_garden_logo" />


            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/traffic_information1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seoul_botanical_garden_way_to_come_subway"
                android:text="주요 교통안내"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/traffic_information2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/traffic_information1"
                android:bufferType="spannable"
                android:text="승용차    내비게이션 : 서울특별시 강서구 마곡동로 161 서울식물원 식물문화센터 (지번주소: 강서구 마곡동 812)"
                android:textSize="15dp"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/traffic_information2"
                android:background="@color/lightGray"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="top"
                app:srcCompat="@drawable/way_to_come_car_icon"
                android:layout_weight="6"/>

            <TextView
                android:id="@+id/way_to_come_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="7dp"
                android:text="올림픽대로(잠실‧여의도) >> 서울식물원 ▪ 양천로 직진 → 마곡중앙8로1길 좌회전 → 마곡동로8길 우회전 → 200m 이동 → 식물문화센터\n서울외곽순환고속도로(인천‧의정부) >> 서울식물원 ▪ 고촌IC 올림픽대로 → 강서로 → (양천향교역사거리)양천로 → 마곡동로 → 식물문화센터"
                android:textSize="12dp"
                android:textColor="@color/no"/>

            </LinearLayout>

            <TextView
                android:id="@+id/traffic_information_subway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/line2"
                android:text="지하철"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/traffic_information_subway"
                android:background="@color/lightGray"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="top"
                    app:srcCompat="@drawable/way_to_come_subway_icon"
                    android:layout_weight="6"/>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:orientation="vertical">

                        <LinearLayout
                           android:id="@+id/line5"
                            android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="top"
                                app:srcCompat="@drawable/subway_icon_nine_line" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="3dp"
                                android:layout_gravity="top"
                                app:srcCompat="@drawable/subway_icon_airport_line" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="5dp"
                               android:layout_marginTop="10dp"
                               android:lineSpacingExtra="7dp"
                               android:text="마곡나루역 3,4번 출구 연결"
                               android:textSize="12dp"
                               android:textColor="@color/no"/>
                        </LinearLayout>

                     <LinearLayout
                         android:id="@+id/line6"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:layout_below="@id/line5">

                         <ImageView
                             android:layout_width="15dp"
                             android:layout_height="15dp"
                             android:layout_marginLeft="10dp"
                             android:layout_marginTop="5dp"
                             android:layout_gravity="top"
                             app:srcCompat="@drawable/subway_icon_nine_line" />

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_weight="1"
                             android:layout_marginLeft="5dp"
                             android:layout_marginTop="5dp"
                             android:lineSpacingExtra="7dp"
                             android:text="양천향교역 8번 출구(도보 5분)"
                             android:textSize="12dp"
                             android:textColor="@color/no"/>
                     </LinearLayout>

                     <LinearLayout
                         android:id="@+id/line7"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:layout_below="@id/line6">

                         <ImageView
                             android:layout_width="15dp"
                             android:layout_height="15dp"
                             android:layout_marginLeft="10dp"
                             android:layout_marginTop="5dp"
                             android:layout_gravity="top"
                             app:srcCompat="@drawable/subway_icon_five_line" />

                         <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_weight="1"
                             android:layout_marginLeft="5dp"
                             android:layout_marginTop="5dp"
                             android:lineSpacingExtra="7dp"
                             android:text="마곡역 2번 출구(도보 10분)"
                             android:textSize="12dp"
                             android:textColor="@color/no"/>
                     </LinearLayout>
                 </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/traffic_information_bus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/line4"
                android:text="버스"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/line8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/traffic_information_bus"
                android:background="@color/lightGray"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/line9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="top"
                    app:srcCompat="@drawable/way_to_come_bus_icon"
                    android:layout_weight="6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/line10"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="‘마곡나루역’정류소 하차 (도보 2분)"
                        android:layout_gravity="top"/>

                    <LinearLayout
                        android:id="@+id/line11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/line10">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="top"
                            app:srcCompat="@drawable/subway_icon_nine_line" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:lineSpacingExtra="7dp"
                            android:text="지선 6642, 6645, 6648"
                            android:textSize="12dp"
                            android:textColor="@color/no"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/line11">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="top"
                            app:srcCompat="@drawable/subway_icon_five_line" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:lineSpacingExtra="7dp"
                            android:text="마을 강서05-1, 강서 07"
                            android:textSize="12dp"
                            android:textColor="@color/no"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/line13"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="‘겸재정선미술관’ 정류소 하차(도보 2분)"
                        android:layout_gravity="top"
                        android:layout_below="@id/line12"/>

                    <LinearLayout
                        android:id="@+id/line14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/line13">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="top"
                            app:srcCompat="@drawable/subway_icon_nine_line" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:lineSpacingExtra="7dp"
                            android:text="간선 672"
                            android:textSize="12dp"
                            android:textColor="@color/no"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/line14">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="top"
                            app:srcCompat="@drawable/subway_icon_five_line" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:lineSpacingExtra="7dp"
                            android:text="지선 6631, 6642, 6712"
                            android:textSize="12dp"
                            android:textColor="@color/no"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/line16"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:text="‘ 마곡역’ 정류소 하차(도보 5분)"
                        android:layout_gravity="top"
                        android:layout_below="@id/line15"/>

                    <LinearLayout
                        android:id="@+id/line17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/line16">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="top"
                            app:srcCompat="@drawable/subway_icon_nine_line" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:lineSpacingExtra="7dp"
                            android:text="간선 601, 605, 654"
                            android:textSize="12dp"
                            android:textColor="@color/no"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/line17">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="top"
                            app:srcCompat="@drawable/subway_icon_five_line" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:lineSpacingExtra="7dp"
                            android:text="지선 6629"
                            android:textSize="12dp"
                            android:textColor="@color/no"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/line18">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="top"
                            app:srcCompat="@drawable/subway_icon_five_line" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:lineSpacingExtra="7dp"
                            android:text="광역 2000, 3000, 3000A"
                            android:textSize="12dp"
                            android:textColor="@color/no"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/traffic_information_parking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/line9"
                android:text="주차안내"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <View
                android:id="@+id/line20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/traffic_information_parking"
                android:background="@color/lightGray"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/line21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line20"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="top"
                app:srcCompat="@drawable/way_to_come_parking_icon"
                android:layout_weight="6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/line22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:bufferType="spannable"
                    android:textSize="12dp"
                    android:text="운영시간 08:00~22:00(운영시간은 향후 변경 될 수 있습니다.)"
                    android:layout_gravity="top"/>

                <TextView
                    android:id="@+id/line23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:bufferType="spannable"
                    android:text="이용요금 10분당 200원"
                    android:layout_gravity="top"
                    android:textSize="12dp"
                    android:layout_below="@id/line22"/>

                <TextView
                    android:id="@+id/line24"
                    android:layout_marginBottom="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="※ 주차장이 협소하므로 대중교통을 이용하시면 편리합니다."
                    android:layout_gravity="top"
                    android:textSize="12dp"
                    android:layout_below="@id/line23"/>

                 </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>