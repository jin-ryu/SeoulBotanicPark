<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_normal">

                    <TextView
                        android:id="@+id/title_plant_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오시는길"
                        android:textColor="@color/colorBaseCyan"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorBaseCyan"
                        android:layout_marginTop="@dimen/margin_narrow" />
                </LinearLayout>
                <!--이미지-->
                <ImageView
                    android:id="@+id/seoul_botanical_garden_way_to_come_subway"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/seoul_botanic_garden_way_to_come_subway"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"/>

                <TextView
                    android:id="@+id/traffic_information1"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주요 교통안내"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/traffic_information2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:bufferType="spannable"
                    android:text="승용차    내비게이션 : 서울특별시 강서구 마곡동로 161 서울식물원 식물문화센터 (지번주소: 강서구 마곡동 812)"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:lineSpacingExtra="5dp" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGray"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="top"
                        android:src="@drawable/way_to_come_car_icon"
                        android:layout_weight="6" />

                    <TextView
                        android:id="@+id/way_to_come_car"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:text="올림픽대로(잠실‧여의도) >> 서울식물원 ▪ 양천로 직진 → 마곡중앙8로1길 좌회전 → 마곡동로8길 우회전 → 200m 이동 → 식물문화센터\n서울외곽순환고속도로(인천‧의정부) >> 서울식물원 ▪ 고촌IC 올림픽대로 → 강서로 → (양천향교역사거리)양천로 → 마곡동로 → 식물문화센터"
                        android:textSize="12sp"
                        android:textColor="@color/no"
                        android:lineSpacingExtra="7dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/traffic_information_subway"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="지하철"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGray"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="top"
                        android:src="@drawable/way_to_come_subway_icon"
                        android:layout_weight="6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/line5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="top"
                                android:src="@drawable/subway_icon_nine_line" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="3dp"
                                android:layout_gravity="top"
                                android:src="@drawable/subway_icon_airport_line" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                android:lineSpacingExtra="7dp"
                                android:text="마곡나루역 3,4번 출구 연결"
                                android:textSize="12sp"
                                android:textColor="@color/no" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="top"
                                android:src="@drawable/subway_icon_nine_line" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="7dp"
                                android:text="양천향교역 8번 출구(도보 5분)"
                                android:textSize="12sp"
                                android:textColor="@color/no" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="top"
                                android:src="@drawable/subway_icon_five_line" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:lineSpacingExtra="7dp"
                                android:text="마곡역 2번 출구(도보 10분)"
                                android:textSize="12sp"
                                android:textColor="@color/no" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/traffic_information_bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="버스"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <View
                    android:id="@+id/line8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGray"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:id="@+id/line9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="top"
                        android:src="@drawable/way_to_come_bus_icon"
                        android:layout_weight="6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/line10"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="‘마곡나루역’정류소 하차 (도보 2분)"
                            android:layout_gravity="top" />

                        <LinearLayout
                            android:id="@+id/line11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="top"
                                android:src="@drawable/bus_branch_line" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="7dp"
                                android:lineSpacingExtra="7dp"
                                android:text="지선 6642, 6645, 6648"
                                android:textSize="12sp"
                                android:textColor="@color/no" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="top"
                                android:src="@drawable/bus_town_line" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="7dp"
                                android:lineSpacingExtra="7dp"
                                android:text="마을 강서05-1, 강서 07"
                                android:textSize="12sp"
                                android:textColor="@color/no" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/line13"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="‘겸재정선미술관’ 정류소 하차(도보 2분)"
                            android:layout_gravity="top" />

                        <LinearLayout
                            android:id="@+id/line14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="top"
                                android:src="@drawable/bus_main_line" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="7dp"
                                android:lineSpacingExtra="7dp"
                                android:text="간선 672"
                                android:textSize="12sp"
                                android:textColor="@color/no" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="top"
                                android:src="@drawable/bus_branch_line" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="7dp"
                                android:lineSpacingExtra="7dp"
                                android:text="지선 6631, 6642, 6712"
                                android:textSize="12sp"
                                android:textColor="@color/no" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/line16"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text="‘ 마곡역’ 정류소 하차(도보 5분)"
                            android:layout_gravity="top" />

                        <LinearLayout
                            android:id="@+id/line17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="top"
                                android:src="@drawable/bus_main_line" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="7dp"
                                android:lineSpacingExtra="7dp"
                                android:text="간선 601, 605, 654"
                                android:textSize="12sp"
                                android:textColor="@color/no" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="top"
                                android:src="@drawable/bus_branch_line" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="7dp"
                                android:lineSpacingExtra="7dp"
                                android:text="지선 6629"
                                android:textSize="12sp"
                                android:textColor="@color/no" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line19"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="top"
                                android:src="@drawable/bus_wide_line" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="7dp"
                                android:lineSpacingExtra="7dp"
                                android:text="광역 2000, 3000, 3000A"
                                android:textSize="12sp"
                                android:textColor="@color/no" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/traffic_information_parking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="주차안내"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <View
                    android:id="@+id/line20"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGray"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:id="@+id/line21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="top"
                        android:src="@drawable/way_to_come_parking_icon"
                        android:layout_weight="6" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/line22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:bufferType="spannable"
                            android:textSize="12sp"
                            android:text="운영시간 08:00~22:00(운영시간은 향후 변경 될 수 있습니다.)"
                            android:layout_gravity="top"
                            android:lineSpacingExtra="5dp" />

                        <TextView
                            android:id="@+id/line23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="5dp"
                            android:bufferType="spannable"
                            android:text="이용요금 10분당 200원"
                            android:layout_gravity="top"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/line24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="※ 주차장이 협소하므로 대중교통을 이용하시면 편리합니다."
                            android:layout_gravity="top"
                            android:textSize="12sp"
                            android:lineSpacingExtra="5dp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>