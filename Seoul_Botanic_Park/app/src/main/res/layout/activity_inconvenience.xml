<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/seoul_botanical_garden_logo"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/seoul_botanical_garden_logo"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_below="@id/seoul_botanical_garden_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/orange_color"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="4"
            android:text="no"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/orange_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="2"
            android:text="제목"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/orange_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="4"
            android:text="등록일"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/orange_color"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="4"
            android:text="추천수"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="@color/orange_color"/>

    </LinearLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/line2"
        android:background="@color/orange_color"
        android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6">

        <ListView
            android:id="@+id/listviewpost"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/line3"
            android:divider="@color/lightGray"
            android:dividerHeight="0.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/registration_post_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"/>

            <Button
                android:id="@+id/registration_post_button2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:background="@color/orange_color"
                android:text="글등록"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

</LinearLayout>