<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e4e4e4"
    android:weightSum="10">

    <LinearLayout
        android:weightSum="10"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <EditText
            android:layout_weight="1.48"
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="※제목을 적어주세요."
            android:textColor="#bababa"
            android:background="@null" />
        <View
            android:layout_weight="0.03"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#bababa"/>

        <EditText
            android:layout_weight="8.36"
            android:id="@+id/input_content"
            android:hint="※내용을 적어주세요. \n\n욕설, 비방 등 법적 문제의 소지가 있는 경우 차단 및 신고, 처벌 받으실 수 있습니다."
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:lines="15"
            android:minLines="13"
            android:maxLines="17"
            android:textColor="#bababa"
            android:scrollbars="vertical"
            android:background="@null"/>
        <View
            android:layout_weight="0.03"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#bababa"/>



        <LinearLayout
            android:id="@+id/registration_post_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"/>

            <Button
                android:id="@+id/registration_post_button2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:background="@color/orange_color"
                android:text="글등록"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>