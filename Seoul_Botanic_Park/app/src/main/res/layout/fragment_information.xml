<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/colorBanner">

        <ImageView
            android:id="@+id/seoul_botanical_garden_logo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_normal"
            android:src="@drawable/seoul_botanical_garden_logo" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <ImageButton
                android:id="@+id/guide_outside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/guide_outside"
                android:scaleType="fitXY"
                android:background="@drawable/border"
                android:padding="1dp"/>

            <ImageButton
                android:id="@+id/guide_inside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/guide_inside"
                android:scaleType="fitXY"
                android:background="@drawable/border"
                android:padding="1dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <com.example.botanic_park.SquareLinearLayout
                android:id="@+id/information_information_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_narrow"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/background_button">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/information_information_use_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="이용안내"
                    android:textColor="@color/colorBase"
                    android:textSize="20sp" />


            </com.example.botanic_park.SquareLinearLayout>

            <com.example.botanic_park.SquareLinearLayout
                android:id="@+id/information_way_to_come"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_narrow"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/background_button">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/information_way_to_come_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="오시는 길"
                    android:textColor="@color/colorBase"
                    android:textSize="20sp" />

            </com.example.botanic_park.SquareLinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <com.example.botanic_park.SquareLinearLayout
                android:id="@+id/information_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_narrow"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/background_button">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/information_news_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="새소식"
                    android:textColor="@color/colorBase"
                    android:textSize="20sp" />
            </com.example.botanic_park.SquareLinearLayout>

            <com.example.botanic_park.SquareLinearLayout
                android:id="@+id/inconvenience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_narrow"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/background_button">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/information_community_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="불편사항"
                    android:textColor="@color/colorBase"
                    android:textSize="20sp" />
            </com.example.botanic_park.SquareLinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>